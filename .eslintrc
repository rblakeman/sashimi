{
    "parser": "babel-eslint",
    "env": {
        "browser": true
    },
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "semi": "error",
        "no-multiple-empty-lines": "error",
        "newline-before-return": "error",
        "no-trailing-spaces": "error",
        "quotes": ["error", "single", { "avoidEscape": true }]
    }
}
